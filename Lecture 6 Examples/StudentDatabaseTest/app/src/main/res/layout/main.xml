<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent">
	<TextView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="Enter Student data:"
		android:textSize="11pt"
		android:textColor="#0f0" />
	<TableLayout
		android:id="@+id/TableLayout01"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:stretchColumns="1">
		<TableRow
			android:id="@+id/TableRow01"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content">
			<TextView
				android:id="@+id/TextView01"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="First Name:"></TextView>
			<EditText
				android:id="@+id/EditTextFName"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"></EditText>
		</TableRow>
		<TableRow
			android:id="@+id/TableRow02"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content">
			<TextView
				android:id="@+id/TextView02"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Last name:"></TextView>
			<AutoCompleteTextView
				android:id="@+id/EditTextLName"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"></AutoCompleteTextView>
		</TableRow>
	</TableLayout>
	<Button
		android:layout_height="wrap_content"
		android:text="Save"
		android:layout_width="match_parent"
		android:id="@+id/ButtonSave"></Button>
	<Button
		android:layout_height="wrap_content"
		android:text="Show All Students"
		android:layout_width="match_parent"
		android:id="@+id/ButtonShowStudents"
		android:textColor="#0f0"
		android:textSize="12pt"
		></Button>
	<TextView
				android:id="@+id/TextViewDisplay"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="Student Info:"></TextView>
</LinearLayout>